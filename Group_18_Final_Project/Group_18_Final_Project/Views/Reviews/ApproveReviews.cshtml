@model ReviewApproveModel
@using Group_18_Final_Project.Models

@{
    ViewData["Title"] = "Index";
}
<h2>Reviews</h2>

<form asp-action="CheckedReviews">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group">

        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Book Title</th>
                    <th>Rating</th>
                    <th>Review Text</th>
                    <th>Approve</th>
                    <th>Reject</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Review review in Model.ToApprove)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => review.Author.UserName)</td>
                        <td>@Html.DisplayFor(modelItem => review.Book.Title)</td>
                        <td>@Html.DisplayFor(modelItem => review.Rating)</td>
                        <td>@Html.DisplayFor(modelItem => review.ReviewText)</td>
                        <td>
                            <input type="radio" name="ReviewsToApprove" id="@review.ReviewID">
                        </td>
                        <td>
                            <input type="radio" name="ReviewsToReject" id="@review.ReviewID">
                        </td>
                    </tr>
                }
            </tbody>
        </table><br /><br />

    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>
