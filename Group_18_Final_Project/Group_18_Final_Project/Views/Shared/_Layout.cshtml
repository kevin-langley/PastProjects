@addTagHelper "* , Microsoft.AspNetCore.Mvc.TagHelpers"
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Bevo's Bookstore</a>
            </div>
            <div class="collapse navbar-collapse" id="nav-content">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="DetailedSearch" class="nav-link">Search</a></li>
                    <li class="nav-item"><a asp-controller="Book" asp-action="Index" class="nav-link">Books</a></li>
                </ul>
            </div>
        </div>
    </nav>



    <div class="container">
        @RenderBody()
    </div>
    <script src="~/lib/jquery/jquery-3.3.1.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>