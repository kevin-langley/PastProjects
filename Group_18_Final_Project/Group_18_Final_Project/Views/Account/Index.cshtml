@model IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>User Name:</dt>
        <dd>@Model.UserName</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>

        <dt>First Name:</dt>
        <dd>@Model.FirstName</dd>

        <dt>Last Name:</dt>
        <dd>@Model.LastName</dd>

        <dt>Phone Number:</dt>
        <dd>@Model.PhoneNumber</dd>

        <dt>Address: </dt>
        <dd>@Model.Address</dd>

        <dt>City:</dt>
        <dd>@Model.City</dd>

        <dt>State:</dt>
        <dd>@Model.State</dd>

        <dt>Zip Code:</dt>
        <dd>@Model.ZipCode</dd>

        <dd>
            [
            @Html.ActionLink("Edit your Account information", "EditInfo")
            ]
        </dd>

        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            ]

        </dd>

        <dt>Last Four Digits of your Credit Cards:</dt>
        <dd>
            @Html.DisplayFor(e => e.creditCards)
        </dd>

        @if (Model.creditCards.Count() < 3)
        {
        <dd>
            [@Html.ActionLink("Add a credit card", "AddCard")]
        </dd>
        }

        <dd>[@Html.ActionLink("Edit your credit cards", "EditCards")]</dd>
    </dl>

   
</div>
<hr />
