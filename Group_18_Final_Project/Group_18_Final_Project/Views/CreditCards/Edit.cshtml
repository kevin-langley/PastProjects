@model Group_18_Final_Project.Models.CreditCard

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Credit Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CreditCardID" />
            <div class="form-group">
                <label asp-for="CreditType" class="control-label"></label>
                <select asp-for="CreditType" class="form-control">
                    <option value="0">Visa</option>
                    <option value="1">American Express</option>
                    <option value="2">Discover</option>
                    <option value="3">MasterCard</option>
                </select>
                <span asp-validation-for="CreditType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditCardNumber" class="control-label"></label>
                <input asp-for="CreditCardNumber" class="form-control" />
                <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
