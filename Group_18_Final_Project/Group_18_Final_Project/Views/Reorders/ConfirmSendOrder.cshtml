@model Group_18_Final_Project.Models.Reorder

@{
    ViewData["Title"] = "ConfirmSendOrder";
}

<!--The following view page is the page for when a user confirms their payment options and wants to place an order-->

<h2>Confirm Your Order</h2>
<h3>Please take the time to review your order below before placing it</h3><br/>




<div>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th colspan="3" style="text-align:center">Order Summary</th>
            </tr>
            <tr>
                <th>Book Title</th>
                <th>Book Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BookReorder bookReorder in Model.BookReorders)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => bookReorder.Book.Title)</td>
                    <td>@Html.DisplayFor(modelItem => bookReorder.Price)</td>
                    <td>@Html.DisplayFor(modelItem => bookReorder.ReorderQuantity)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <table class="table table-sm table-bordered" style="width:30%">
        <tr>
            <th colspan="2" style="text-align:center">Order Summary</th>
        </tr>
      
        
        <tr>
            <td>Order Total</td>
            <td>@Html.DisplayFor(bo => bo.ReorderTotal)</td>
        </tr>
    </table>
</div>

<a asp-action="PlaceOrder" asp-route-id ="@Model.ReorderID" class="btn btn-success">Place Your Order</a>

