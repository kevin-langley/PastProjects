@model Group_18_Final_Project.Models.Reorder
@using Group_18_Final_Project.Models
@{
    ViewData["Title"] = "Details";
}
<!--The following view page is the shopping cart-->
<h2>@ViewBag.AddedOrder</h2>
<h2>Order Form</h2>
<h3>@ViewBag.CartMessage</h3>
<div>
    <h4>Your order</h4>
    @ViewBag.DiscontinuedBook

</div>
<div>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Book Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BookReorder bookOrder in Model.BookReorders)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => bookOrder.Book.Title)</td>
                    <td>@Html.DisplayFor(modelItem => bookOrder.Book.WholesalePrice)</td>
                    <td>@Html.DisplayFor(modelItem => bookOrder.ReorderQuantity)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <table class="table table-sm table-bordered" style="width:30%">
        <tr>
            <th colspan="2" style="text-align:center">Order Summary</th>
        </tr>
        <tr>
            <td>Order Total</td>
            <td>@Html.DisplayFor(bo => bo.ReorderTotal)</td>
        </tr>
        
    </table>
</div>
<div>
    <a asp-action="CompletedReorderDetails" asp-route-id="@Model.ReorderID" class="btn btn-success">Send Order</a>
    <a asp-action="RemoveFromOrder" asp-route-id="@Model.ReorderID">Edit Your Order</a> |
    <a asp-action="Index">Back to List</a> |
</div>
