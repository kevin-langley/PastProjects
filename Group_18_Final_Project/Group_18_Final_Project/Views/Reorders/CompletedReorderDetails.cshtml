@model Group_18_Final_Project.Models.Reorder
@using Group_18_Final_Project.Models
@{
    ViewData["Title"] = "CompletedReorderDetails";
}
<!--The following view page is details of a completed order-->
<div>
    <h2>Order</h2>
    <br />
    <h4>Your Completed Order</h4>
    
</div>


<div>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th colspan="3" style="text-align:center">Order Summary</th>
            </tr>
            <tr>
                <th>Book Title</th>
                <th>Book Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BookReorder bookOrder in Model.BookReorders)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => bookOrder.Book.Title)</td>
                    <td>@Html.DisplayFor(modelItem => bookOrder.Book.WholesalePrice)</td>
                    <td>@Html.DisplayFor(modelItem => bookOrder.ReorderQuantity)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <table class="table table-sm table-bordered" style="width:30%">
        <tr>
            <th colspan="2" style="text-align:center">Cart Summary</th>
        </tr>
        <tr>
            <td>Order Total</td>
            <td>@Html.DisplayFor(bo => bo.ReorderTotal)</td>
        </tr>
    </table>
</div>