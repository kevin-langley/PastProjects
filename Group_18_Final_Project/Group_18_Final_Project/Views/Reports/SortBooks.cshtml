@using Group_18_Final_Project.Controllers

<br />
<h2>Books Report</h2>
<form asp-action="BooksReport" asp-controller="Reports" method="post">
    @*Sort Report Results*@
    <div class="form-group">
        <label>Sort by:</label>
        <br />
        <label class="radio">@Html.RadioButton("SelectedBooks", reportBooksSold.NewestFirst, true)Most Recent</label>
        <br />
        <label class="radio">@Html.RadioButton("SelectedBooks", reportBooksSold.ProfitDescending)Profit Margin: High to Low</label>
        <br />
        <label class="radio">@Html.RadioButton("SelectedBooks", reportBooksSold.ProfitAscending)Profit Margin: Low to High</label>
        <br />
        <label class="radio">@Html.RadioButton("SelectedBooks", reportBooksSold.PriceDescending)Book Price: High to Low</label>
        <br />
        <label class="radio">@Html.RadioButton("SelectedBooks", reportBooksSold.PriceAscending)Book Price: Low to High</label>
        <br />
        <label class="radio">@Html.RadioButton("SelectedBooks", reportBooksSold.TimesPurchased)Times Purchased</label>
    </div>

    <!--Submit form data to be processed by method-->
    <button type="submit" class="btn btn-danger">View Report</button>
    <!--Spacing-->
    <br />
    <br />
</form>