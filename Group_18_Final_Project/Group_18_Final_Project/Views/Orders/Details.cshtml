@model Group_18_Final_Project.Models.Order
@using Group_18_Final_Project.Models
@{
    ViewData["Title"] = "Details";
}

<h2>@ViewBag.AddedOrder</h2>
<h2>Shopping Cart</h2>
<h3>@ViewBag.CartMessage</h3>

<div>
    <h4>Your cart</h4>

    @ViewBag.OutOfStockBook
    @ViewBag.DiscontinuedBook
    s
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
    </dl>
</div>
<div>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Book Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BookOrder bookOrder in Model.BookOrders)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => bookOrder.Book.Title)</td>
                    <td>@Html.DisplayFor(modelItem => bookOrder.Price)</td>
                    <td>@Html.DisplayFor(modelItem => bookOrder.OrderQuantity)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
