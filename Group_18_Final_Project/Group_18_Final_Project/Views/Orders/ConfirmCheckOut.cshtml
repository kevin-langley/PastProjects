@model Group_18_Final_Project.Models.Order

@{
    ViewData["Title"] = "ConfirmCheckOut";
}

<!--The following view page is the page for when a user confirms their payment options and wants to place an order-->

<h2>Confirm Your Order</h2>
<h3>Please take the time to review your order below before placing it</h3><br/>

<div class="row">
    <div class="column" style="text-align:center">
        <h5>Shipping Address</h5>
    </div>
    <div class="column" >
        <p></p>
    </div>
    <div class="column" style="text-align:center">
        <p>@Html.DisplayFor(modelItem => modelItem.User.Address)</p>
        <p>@Html.DisplayFor(modelItem => modelItem.User.City), @Html.DisplayFor(modelItem => modelItem.User.State)</p>
    </div>
</div>

<div class="row">
    <div class="column" style="text-align:center">
        <h5>Payment Method</h5>
    </div>
    <div class="column">
        <p></p>
    </div>
    <div class="column" style="text-align:center">
        <p>@ViewBag.ccType</p>
        <p>@ViewBag.ccHidden</p>
    </div>
</div>

<div>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th colspan="2" style="text-align:center">Order Summary</th>
            </tr>
            <tr>
                <th>Book Title</th>
                <th>Book Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BookOrder bookOrder in Model.BookOrders)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => bookOrder.Book.Title)</td>
                    <td>@Html.DisplayFor(modelItem => bookOrder.Price)</td>
                    <td>@Html.DisplayFor(modelItem => bookOrder.OrderQuantity)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <table class="table table-sm table-bordered" style="width:30%">
        <tr>
            <th colspan="2" style="text-align:center">Cart Summary</th>
        </tr>
        <tr>
            <td>Cart Subtotal</td>
            <td>@Html.DisplayFor(bo => bo.OrderSubtotal)</td>
        </tr>
        <tr>
            <td>Shipping</td>
            <td>@Html.DisplayFor(bo => bo.TotalShippingPrice)</td>
        </tr>
        <tr>
            <td>Order Total</td>
            <td>@Html.DisplayFor(bo => bo.OrderTotal)</td>
        </tr>
    </table>
</div>

<a asp-action="PlaceOrder" asp-route-id ="@Model.OrderID" class="btn btn-success">Place Your Order</a>

