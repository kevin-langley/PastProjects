@model Group_18_Final_Project.Models.Order
@using Group_18_Final_Project.Models

@{
    ViewData["Title"] = "Check Out";
}
<h2>Check Out</h2>
<h4>Your Order</h4>
<hr />
<div>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Book Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BookOrder bookOrder in Model.BookOrders)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => bookOrder.Book.Title)</td>
                    <td>@Html.DisplayFor(modelItem => bookOrder.Price)</td>
                    <td>@Html.DisplayFor(modelItem => bookOrder.OrderQuantity)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <h4>Your shipping address:</h4>
    <p>@Html.DisplayFor(modelItem => modelItem.User.Address)</p>
</div>
<div class="row">
    <div class="col-md-4">
        <h4>Please choose your payment or add a new credit card:</h4>
        <form asp-action="CheckOut">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderID" />
            <div class="form-group">
                <label asp-for="CreditCard" class="control-label"></label>
                <label>Please select "0000000000000000000" to add new credit card</label>
                @Html.DropDownList("SelectedCreditCard", (SelectList)ViewBag.AllCards, new { @class = "form-control" })
            </div>
            <label>Add new credit card info:</label>
            <div class="form-group">
                <label>Choose the Credit Card type</label>
                <label class="radio">@Html.RadioButton("SelectedSort", CreditCardType.AmericanExpress, true)American Express</label>
                <label class="radio">@Html.RadioButton("SelectedSort", CreditCardType.Discover)Discover</label>
                <label class="radio">@Html.RadioButton("SelectedSort", CreditCardType.MasterCard)Master Card</label>
                <label class="radio">@Html.RadioButton("SelectedSort", CreditCardType.Visa)Visa</label>
            </div>
            <label>Type in the new credit card number:</label>
            <div class="form-group">
                <input name="stringCreditCard" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
